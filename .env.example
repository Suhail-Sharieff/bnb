# Environment Configuration for Blockchain Budget Verifier
# Copy this file to .env and fill in your actual values

# Your Ethereum/Polygon private key (without 0x prefix)
# IMPORTANT: Keep this secret and never commit to version control
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# RPC URL for blockchain connection
# Examples:
# Sepolia Testnet (Ethereum): https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Mumbai Testnet (Polygon): https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alchemy Sepolia: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# Alchemy Mumbai: https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract address (leave empty if deploying new contract)
# This will be filled automatically after deployment
CONTRACT_ADDRESS=

# Network configuration (optional)
NETWORK_NAME=sepolia
CHAIN_ID=11155111

# Gas settings (optional - will use network defaults if not specified)
GAS_LIMIT=500000
GAS_PRICE=20000000000

# Debug mode (set to true for verbose logging)
DEBUG=false